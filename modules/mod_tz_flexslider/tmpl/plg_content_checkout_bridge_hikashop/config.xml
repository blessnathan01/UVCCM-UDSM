<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params">
        <fieldset name="basic">            ​
            <field type="spacer" name="spacer_purchase_name"
                   class="alert alert-success btn-block"
                   label="PLG_CONTENT_PURCHASE_OPTIONS_LABEL"/>
            <field type="radio" name="ct_chk_hikashop_show_hikashop"
                   default="1" class="switcher btn-group"
                   label="MOD_TZ_PORTFOLIO_PLUS_FLEXSLIDER_SHOW_CHECKOUT_BRIDGE_HIKASHOP">
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
            <field type="text" name="text_button"
                   default="Buy Now"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_TEXT_BUTTON_LABEL"/>
            <field type="list" name="show_discount"
                   default="1"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_DISCOUNT_LABEL">
                <option value="0">JNO</option>
                <option value="1">DISPLAY_DISCOUNT_AMOUNT</option>
                <option value="2">DISPLAY_PRICE_BEFORE_DISCOUNT</option>
            </field>
            <field type="list" name="price_with_tax"
                   default="1"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_TAX_LABEL">
                <option value="0">NO_TAX</option>
                <option value="1">WITH_TAX</option>
                <option value="2">DISPLAY_BOTH</option>
            </field>
            <field type="list" name="show_original_price"
                   default="0"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_ORIGINAL_PRICE_LABEL">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="list" name="show_dimension"
                   default="0"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_DIMENSION_LABEL">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="list" name="show_brand" default="0"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_BRAND_LABEL">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="list" name="show_stock" default="0"
                   showon="ct_chk_hikashop_show_hikashop:1"
                   label="PLG_CONTENT_PURCHASE_SHOW_STOCK_LABEL">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field type="spacer" name="spacer_purchase_hr" hr="true"/>          ​
        </fieldset>        ​
    </fields>
</form>